<p id="notice"><%= notice %></p>

<p>
  <strong><%= t(:title) %>:</strong>
  <%= @note.title %>
</p>

<p>
  <strong><%= t(:description) %>:</strong>
  <%= @note.description %>
</p>

<p>
  <strong><%= t(:begin) %>:</strong>
  <%= @note.begin.to_time %>
</p>

<p>
  <strong><%= t(:end) %>:</strong>
  <%= @note.end.to_time %>
</p>

<p>
  <strong><%= t(:begins_at) %>:</strong>
  <%= time_ago_in_words(@note.begin) %>
</p>
<%= link_to t(:edit), edit_note_path(@note) %> |
<%= link_to t(:delete), @note, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to t(:back), notes_path %>
